<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Campo para el nombre del artículo -->
    <EditText
        android:id="@+id/item_name_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="18dp"
        android:hint="Nombre del artículo" />

    <!-- Campo para la cantidad del artículo -->
    <EditText
        android:id="@+id/item_quantity_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="18dp"
        android:hint="Cantidad"
        android:inputType="number" />

    <!-- Campo para la marca del artículo -->
    <EditText
        android:id="@+id/item_brand_input"
        android:layout_width="match_parent"
        android:padding="18dp"
        android:layout_height="wrap_content"
        android:hint="Marca" />

    <!-- Campo para el precio estimado del artículo -->
    <EditText
        android:id="@+id/item_price_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="18dp"
        android:hint="Precio estimado"
        android:inputType="numberDecimal" />

    <!-- Botón para añadir un nuevo artículo -->
    <Button
        android:id="@+id/add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Añadir artículo" />

    <!-- Lista de artículos -->
    <ListView
        android:id="@+id/item_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="1dp" />
</LinearLayout>
